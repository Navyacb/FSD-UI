<%- include('includes/head.ejs') %>
</head>
<body class="container-fluid">
<%- include('includes/header.ejs') %>
<div class="row">
        <div id="pageContent" class="pageContent">
            <div class="container ">
            <div class="row text-center" style="padding:20px">
            <div class="col-12 h1 logo">Edit Account</div>
            </div>
            <div class="row text-center ">
                <div class="col-3"></div>
                <div class="col-7">
                <form id="form1" name="form1" onSubmit="return false" class="text-left">
                    <div>
                        <table class="center">
                            <tr>
                                <td>
                                    <div class="float-left"><label for="firstName">First Name</label></div>
                                    <div class="float-right">:</div>
        
                                </td>
                                <td>
                                    <div class='container'>
                                        <input type="text" class="form-control" id="firstName"
                                                <% if (!!data.user) { %>
                                               value="<%= data.user.firstname %>"
        
                                                <% } %>
        
                                               name="firstName" required="true" placeholder="First Name"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="float-left"><label for="lastName">Last Name</label></div>
                                    <div class="float-right">:</div>
        
                                </td>
                                <td>
                                    <div class='container'>
                                        <input type="text" class="form-control" id="lastName"
                                        <% if (!!data.user) { %>
                                               value="<%= data.user.lastname %>"
                                                <% } %>
                                               name="lastName" required="true" placeholder="Last Name"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="float-left"><label for="email">Email <Address></Address></label></div>
                                    <div class="float-right">:</div>
                                </td>
                                <td>
                                    <div class='container'>
                                        <input type="email" class="form-control" id="email"
                                        <% if (!!data.user) { %>
                                               value="<%= data.user.emailid %>"
                                                <% } %>
                                               name="email" required="true" placeholder="Email ID"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="float-left"><label for="dateofBirth">Date of Birth</label></div>
                                    <div class="float-right">:</div>
                                </td>
                                <td>
                                    <div class='container'>
                                        <input type="date" class="form-control" id="dateofBirth"
                                        <% if (!!data.user) { %>
                                               value="<%= data.user.dateofbirth %>"
        
                                                <% } %>
                                               name="dateofBirth" required="true" placeholder="Date of Birth"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="float-left"><label for="profilePicture">Profile Picture</label></div>
                                    <div class="float-right">:</div>
        
                                </td>
                                <td>
                                    <div class='container'>
                                        <input type="file" class="form-control" id="profilePicture" name="profilePicture" required="true" placeholder="Profile picture"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center">
                                    <button type="Submit" onclick="validateDetails()" class="btn btn-primary">Submit</button>
                                    <button type="button" onclick="this.form.reset();" class="btn btn-secondary">Clear</button>
                                </td>
                            </tr>
                            </tr>
                        </table>
                    </div>
                </form>
            </div>
        </div>
        </div>
        </div>
</body>
</html>